<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/size_x32"
        android:layout_height="@dimen/size_x32"
        android:src="@drawable/level_up" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/size_x16"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        android:text=""
        android:textAppearance="@style/TextAppearance.JobFinder.Title4"
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/TextAppearance.JobFinder.Text1"
        android:textColor="@color/green" />
</merge>